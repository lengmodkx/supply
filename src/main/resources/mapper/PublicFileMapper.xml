			<if test="fileThumbnail != null and fileThumbnail != ''">
			file_thumbnail,
			</if>
			<if test="filePrivacy != null ">
			file_privacy,
			</if>
		</trim>

		<trim prefix="values (" suffix=")" suffixOverrides=",">

			<if test="fileId != null and fileId != ''">
				#{fileId},
