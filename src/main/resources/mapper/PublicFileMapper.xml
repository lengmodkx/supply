<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.file.PublicFileMapper">
	
	<resultMap id="BaseResultMap" type="com.art1001.supply.entity.file.PublicFile">
		<result column="file_id" property="fileId" jdbcType="VARCHAR" />
		<result column="file_name" property="fileName" jdbcType="VARCHAR" />
		<result column="ext" property="ext" jdbcType="VARCHAR" />
		<result column="file_url" property="fileUrl" jdbcType="VARCHAR" />
		<result column="project_id" property="projectId" jdbcType="VARCHAR" />
		<result column="catalog" property="catalog" jdbcType="INTEGER" />
		<result column="size" property="size" jdbcType="VARCHAR" />
		<result column="parent_id" property="parentId" jdbcType="VARCHAR" />
		<result column="file_del" property="fileDel" jdbcType="INTEGER" />
		<result column="create_time" property="createTime" jdbcType="BIGINT" />
		<result column="update_time" property="updateTime" jdbcType="BIGINT" />
		<result column="file_thumbnail" property="fileThumbnail" jdbcType="VARCHAR" />
		<result column="file_privacy" property="filePrivacy" jdbcType="INTEGER" />
	</resultMap>
    
	<sql id="Base_Column_List">
						file_id,
				file_name,
				ext,
				file_url,
				project_id,
				`catalog`,
				`size`,
				`parent_id`,
				file_del,
				create_time,
				update_time,
				file_thumbnail,
				file_privacy
	</sql>

	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="condition !=null">
			</if>
		</where>
	</sql>
	
	<select id="findPublicFilePagerList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.base.Pager">
		
		select * from prm_public_file
		<include refid="whereStatement" />
		
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
		
	</select>
	
	<select id="findPublicFileAllList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.file.PublicFile">
		SELECT
		<include refid="Base_Column_List" />
		from prm_public_file
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
	</select>
	
	<select id="findPublicFileById" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from prm_public_file c where id = #{id}

	</select>
	
	<delete id="deletePublicFileById" parameterType="java.lang.String">
		delete from
		prm_public_file where id = #{id}
	</delete>
	
	<insert id="savePublicFile" parameterType="com.art1001.supply.entity.file.PublicFile">

		insert into prm_public_file
		<trim prefix="(" suffix=")" suffixOverrides=",">

			<if test="fileId != null and fileId != ''">
			file_id,
			</if>
			<if test="fileName != null and fileName != ''">
			file_name,
			</if>
			<if test="ext != null and ext != ''">
			ext,
			</if>
			<if test="fileUrl != null and fileUrl != ''">
			file_url,
			</if>
			<if test="projectId != null and projectId != ''">
			project_id,
			</if>
			<if test="catalog != null ">
			catalog,
			</if>
			<if test="size != null and size != ''">
			size,
			</if>
			<if test="parent.id != null and parent.id != ''">
			parent_id,
			</if>
			<if test="fileDel != null ">
			file_del,
			</if>
			<if test="createTime != null ">
			create_time,
			</if>
			<if test="updateTime != null ">
			update_time,
