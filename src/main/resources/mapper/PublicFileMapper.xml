	<update id="updatePublicFile" parameterType="com.art1001.supply.entity.file.PublicFile">

		update prm_public_file
		<set>
			<if test="fileId != null and fileId != ''">
				file_id = #{fileId},
			</if>
			<if test="fileName != null and fileName != ''">
				file_name = #{fileName},
			</if>
			<if test="ext != null and ext != ''">
				ext = #{ext},
			</if>
			<if test="fileUrl != null and fileUrl != ''">
				file_url = #{fileUrl},
			</if>
			<if test="projectId != null and projectId != ''">
				project_id = #{projectId},
			</if>
			<if test="catalog != null ">
				catalog = #{catalog},
			</if>
			<if test="size != null and size != ''">
				size = #{size},
			</if>
			<if test="parent.id != null and parent.id != ''">
				parent_id = #{parent.id},
			</if>
			<if test="fileDel != null ">
				file_del = #{fileDel},
			</if>
			<if test="createTime != null ">
				create_time = #{createTime},
			</if>
			<if test="updateTime != null ">
				update_time = #{updateTime},
			</if>
			<if test="fileThumbnail != null and fileThumbnail != ''">
				file_thumbnail = #{fileThumbnail},
			</if>
			<if test="filePrivacy != null ">
				file_privacy = #{filePrivacy},
			</if>
		</set>

		WHERE id = #{id}

	</update>

	<!-- 查询出公共模型库的信息 -->
