			<if test="fileDel != null ">
				#{fileDel},
			</if>
			<if test="createTime != null ">
				#{createTime},
			</if>
			<if test="updateTime != null ">
				#{updateTime},
			</if>
			<if test="fileThumbnail != null and fileThumbnail != ''">
				#{fileThumbnail},
			</if>
			<if test="filePrivacy != null ">
