<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.chat.ChatMapper">
	
	<resultMap id="BaseResultMap" type="com.art1001.supply.entity.chat.Chat">
		<result column="chat_id" property="chatId" jdbcType="VARCHAR" />
		<result column="member_id" property="memberId" jdbcType="VARCHAR" />
		<result column="content" property="content" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="BIGINT" />
		<result column="project_id" property="projectId" jdbcType="VARCHAR" />
		<association property="user" javaType="com.art1001.supply.entity.user.UserEntity">
			<id column="user_id" property="userId"/>
			<result column="user_name" property="userName"/>
			<result column="image" property="image"/>
		</association>
		<collection property="fileList" column="chat_id" javaType="java.util.ArrayList"
					select="com.art1001.supply.mapper.file.FileMapper.findFileByPublicId"/>
	</resultMap>
    
	<sql id="Base_Column_List">
		chat_id,member_id,content,create_time,project_id
	</sql>

	<!-- 查询出一个项目的所有群聊消息 -->
	<select id="findChatList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.chat.Chat">
		SELECT
			chat_id,
			member_id,
			content,
			chat.create_time,
			project_id,
			user_id,
			image,
			user_name
		FROM
			prm_chat AS chat
			LEFT JOIN tb_user u ON chat.member_id = u.user_id
		WHERE
			project_id = #{projectId}
		ORDER BY
			create_time
	</select>

</mapper>