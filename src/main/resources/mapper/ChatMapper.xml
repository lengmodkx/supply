<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.chat.ChatMapper">
	
	<resultMap id="BaseResultMap" type="com.art1001.supply.entity.chat.Chat">
		<result column="chat_id" property="chatId" jdbcType="VARCHAR" />
		<result column="member_id" property="memberId" jdbcType="VARCHAR" />
		<result column="content" property="content" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="BIGINT" />
		<result column="project_id" property="projectId" jdbcType="VARCHAR" />
	</resultMap>
    
	<sql id="Base_Column_List">
		chat_id,member_id,content,create_time,project_id
	</sql>

	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="condition !=null">
			</if>
		</where>
	</sql>
	
	<select id="findChatPagerList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.base.Pager">
		
		select * from prm_chat
		<include refid="whereStatement" />
		
		<if test="orderBy == 0">
			order by chat_id desc
		</if>
		<if test="orderBy == 1">
			order by chat_id asc
		</if>
		
	</select>
	
	<select id="findChatAllList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.chat.Chat">
		SELECT
		<include refid="Base_Column_List" />
		from prm_chat
		<if test="orderBy == 0">
			order by chat_id desc
		</if>
		<if test="orderBy == 1">
			order by chat_id asc
		</if>
	</select>
	
	<select id="findChatByChatId" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from prm_chat c where chat_id = #{chatId}

	</select>
	
	<delete id="deleteChatByChatId" parameterType="java.lang.String">
		delete from
		prm_chat where chat_id = #{chatId}
	</delete>
	
	<insert id="saveChat" parameterType="com.art1001.supply.entity.chat.Chat">

		insert into prm_chat
		<trim prefix="(" suffix=")" suffixOverrides=",">

			<if test="chatId != null and chatId != ''">
			chat_id,
			</if>
			<if test="memberId != null and memberId != ''">
			member_id,
			</if>
			<if test="content != null and content != ''">
			content,
			</if>
			<if test="createTime != null ">
			create_time,
			</if>
			<if test="fileUrl != null and fileUrl != ''">
			file_url,
			</if>
		</trim>

		<trim prefix="values (" suffix=")" suffixOverrides=",">

			<if test="chatId != null and chatId != ''">
				#{chatId},
			</if>
			<if test="memberId != null and memberId != ''">
				#{memberId},
			</if>
			<if test="content != null and content != ''">
				#{content},
			</if>
			<if test="createTime != null ">
				#{createTime},
			</if>
			<if test="fileUrl != null and fileUrl != ''">
				#{fileUrl},
			</if>
		</trim>

	</insert>
	
	<update id="updateChat" parameterType="com.art1001.supply.entity.chat.Chat">

		update prm_chat
		<set>
			<if test="chatId != null and chatId != ''">
				chat_id = #{chatId},
			</if>
			<if test="memberId != null and memberId != ''">
				member_id = #{memberId},
			</if>
			<if test="content != null and content != ''">
				content = #{content},
			</if>
			<if test="createTime != null ">
				create_time = #{createTime},
			</if>
			<if test="fileUrl != null and fileUrl != ''">
				file_url = #{fileUrl},
			</if>
		</set>

		WHERE chat_id = #{chatId}

	</update>
	
</mapper>