	<update id="updateProjectMember" parameterType="com.art1001.supply.entity.project.ProjectMember">

		update prm_project_member
		<set>
			<if test="projectId != null and projectId != ''">
				project_id = #{projectId},
			</if>
			<if test="memberId != null and memberId != ''">
