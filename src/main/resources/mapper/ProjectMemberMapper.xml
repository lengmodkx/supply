	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="condition !=null">
			</if>
		</where>
	</sql>
	
	<select id="findProjectMemberPagerList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.base.Pager">
		
		select * from prm_project_member
		<include refid="whereStatement" />
		
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
		
	</select>
	
	<select id="findProjectMemberAllList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.project.ProjectMember">
		SELECT
		<include refid="Base_Column_List" />
		from prm_project_member
		where 1=1
		<if test="projectId != null and projectId != ''">
			and project_id = #{projectId}
		</if>
		order by member_label desc
	</select>
	
	<select id="findProjectMemberById" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from prm_project_member c where id = #{id}

	</select>

	<!-- 根据项目id 查询项目的成员信息 -->
	<select id="findByProjectId" resultMap="BaseResultMap" parameterType="java.lang.String">
		SELECT p.id,p.project_id,p.member_id,p.member_label, u.u_name as member_name,i.u_image as member_img FROM prm_project_member p
		LEFT JOIN tb_user u on p.member_id = u.u_id
		LEFT JOIN tb_user_info i on u.u_id = i.u_id
		where
			project_id = #{projectId} order by p.member_label desc
	</select>
	
	<delete id="deleteProjectMemberById" parameterType="java.lang.String">
		delete from
		prm_project_member where id = #{id}
	</delete>
	
