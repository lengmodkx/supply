<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.collect.PublicCollectMapper">
	
	<resultMap id="BaseResultMap" type="com.art1001.supply.entity.collect.PublicCollect">
		<result column="id" property="id" jdbcType="VARCHAR" />
		<result column="public_id" property="publicId" jdbcType="VARCHAR" />
		<result column="member_id" property="memberId" jdbcType="VARCHAR" />
		<result column="project_id" property="projectId" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="BIGINT" />
		<result column="update_time" property="updateTime" jdbcType="BIGINT" />
		<result column="collect_type" property="collectType" jdbcType="VARCHAR" />
		<result column="collect_content" property="collectContent" jdbcType="CLOB" />
	</resultMap>

	<sql id="Base_Column_List">
				id,
				member_id,
				public_id,
				project_id,
				create_time,
				update_time,
				collect_type
	</sql>

	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="condition !=null">
			</if>
		</where>
	</sql>

	<select id="findPublicCollectPagerList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.base.Pager">

		select * from prm_public_collect
		<include refid="whereStatement" />

		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>

	</select>

	<select id="findPublicCollectAllList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.collect.PublicCollect">
		SELECT
		<include refid="Base_Column_List" />
		from prm_public_collect
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
	</select>

	<select id="findPublicCollectById" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from prm_public_collect where id = #{id}

	</select>

	<delete id="deletePublicCollectById" parameterType="java.lang.String">
		delete from
		prm_public_collect where id = #{id}
	</delete>

	<insert id="savePublicCollect" parameterType="com.art1001.supply.entity.collect.PublicCollect">

		insert into prm_public_collect
		<trim prefix="(" suffix=")" suffixOverrides=",">

			<if test="id != null and id != ''">
			id,
			</if>
			<if test="publicId != null and publicId != ''">
				public_id,
			</if>
			<if test="memberId != null and memberId != ''">
			member_id,
			</if>
			<if test="projectId != null and projectId != ''">
			project_id,
			</if>
			<if test="createTime != null ">
			create_time,
			</if>
			<if test="updateTime != null ">
			update_time,
			</if>
			<if test="collectType != null and collectType != ''">
				collect_type,
			</if>
		</trim>

		<trim prefix="values (" suffix=")" suffixOverrides=",">

			<if test="id != null and id != ''">
				#{id},
			</if>
			<if test="publicId != null and publicId != ''">
				#{publicId},
			</if>
			<if test="memberId != null and memberId != ''">
				#{memberId},
			</if>
			<if test="projectId != null and projectId != ''">
				#{projectId},
			</if>
			<if test="createTime != null ">
				#{createTime},
			</if>
			<if test="updateTime != null ">
				#{updateTime},
			</if>
			<if test="collectType != null and collectType != ''">
				#{collectType},
			</if>
		</trim>

	</insert>

	<update id="updatePublicCollect" parameterType="com.art1001.supply.entity.collect.PublicCollect">
		update prm_public_collect
		<set>
			<if test="publicId != null and publicId != ''">
				public_id = #{publicId},
			</if>
			<if test="memberId != null and memberId != ''">
				member_id = #{memberId},
			</if>
			<if test="projectId != null and projectId != ''">
				project_id = #{projectId},
			</if>
			<if test="createTime != null ">
				create_time = #{createTime},
			</if>
			<if test="updateTime != null ">
				update_time = #{updateTime},
			</if>
		</set>

		WHERE id = #{id}

	</update>

	<!-- 更新收藏表的 json 数据信息 -->
    <update id="updateJson">
		update prm_public_collect SET collect_content =json_set(
		collect_content,
		<trim suffixOverrides=",">
			<if test="type == '任务'">

				<if test="obj.userImage != null and obj.userImage != ''">
					'$.userImage',#{obj.userImage},
				</if>

				<if test="obj.remarks != null and obj.remarks != ''">
					'$.remarks',#{obj.remarks},
				</if>

				<if test="obj.taskName != null and obj.taskName != ''">
					'$.taskName',#{obj.taskName},
				</if>

				<if test="obj.menuName != null and obj.menuName != ''">
					'$.menuName',#{obj.menuName},
				</if>

				<if test="obj.groupName != null and obj.groupName != ''">
					'$.groupName',#{obj.groupName},
				</if>

				<if test="obj.projectName != null and obj.projectName != ''">
					'$.projectName',#{obj.projectName},
				</if>

			</if>
			<if test="type == '文件'">
				<if test="obj.fileName != null and obj.fileName != ''">
					'$.fileName',#{obj.fileName},
				</if>
				<if test="obj.projectName != null and obj.projectName != ''">
					'$.projectName',#{obj.projectName},
				</if>
			</if>
			<if test="type == '日程'">
				<if test="obj.scheduleName != null and obj.scheduleName != ''">
					'$.scheduleName',#{obj.scheduleName},
				</if>
				<if test="obj.projectName != null and obj.projectName != ''">
					'$.projectName',#{obj.projectName},
				</if>
			</if>
			<if test="type == '分享'">
				<if test="obj.shareName != null and obj.shareName != ''">
					'$.shareName',#{obj.shareName},
				</if>
				<if test="obj.projectName != null and obj.projectName != ''">
					'$.projectName',#{obj.projectName},
				</if>
			</if>
		</trim>
		) WHERE public_id = #{id};
	</update>

	<!-- 删除多个任务的收藏记录 -->
	<delete id="deleteManyCollectByItemId">
		delete from prm_public_collect where public_id in
		(
			<foreach collection="list" item="publicId" separator=",">
				#{publicId}
			</foreach>
		)
	</delete>
	
</mapper>