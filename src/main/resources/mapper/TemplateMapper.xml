<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.template.TemplateMapper">
	
	<resultMap id="BaseResultMap" type="com.art1001.supply.entity.template.Template">
		<result column="template_id" property="templateId" jdbcType="VARCHAR" />
		<result column="template_cover" property="templateCover" jdbcType="VARCHAR" />
		<result column="template_name" property="templateName" jdbcType="VARCHAR" />
		<result column="template_des" property="templateDes" jdbcType="VARCHAR" />
		<result column="template_title" property="templateTitle" jdbcType="VARCHAR" />
	</resultMap>
    
	<sql id="Base_Column_List">
						template_id,
				template_cover,
				template_name,
				template_des,
				template_title
	</sql>

	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="condition !=null">
			</if>
		</where>
	</sql>
	
	<select id="findTemplatePagerList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.base.Pager">
		
		select * from template
		<include refid="whereStatement" />
		
		<if test="orderBy == 0">
			order by template_id desc
		</if>
		<if test="orderBy == 1">
			order by template_id asc
		</if>
		
	</select>
	
	<select id="findTemplateAllList" resultMap="BaseResultMap"
		parameterType="com.leimingtech.core.entity.base.Template">
		SELECT
		<include refid="Base_Column_List" />
		from template
		<if test="orderBy == 0">
			order by template_id desc
		</if>
		<if test="orderBy == 1">
			order by template_id asc
		</if>
	</select>
	
	<select id="findTemplateByTemplateId" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from template c where template_id = #{templateId}

	</select>
	
	<delete id="deleteTemplateByTemplateId" parameterType="java.lang.String">
		delete from
		template where template_id = #{templateId}
	</delete>
	
	<insert id="saveTemplate" parameterType="com.art1001.supply.entity.template.Template">

		insert into template
		<trim prefix="(" suffix=")" suffixOverrides=",">

			<if test="templateId != null and templateId != ''">
			template_id,
			</if>
			<if test="templateCover != null and templateCover != ''">
			template_cover,
			</if>
			<if test="templateName != null and templateName != ''">
			template_name,
			</if>
			<if test="templateDes != null and templateDes != ''">
			template_des,
			</if>
			<if test="templateTitle != null and templateTitle != ''">
			template_title,
			</if>
		</trim>

		<trim prefix="values (" suffix=")" suffixOverrides=",">

			<if test="templateId != null and templateId != ''">
				#{templateId},
			</if>
			<if test="templateCover != null and templateCover != ''">
				#{templateCover},
			</if>
			<if test="templateName != null and templateName != ''">
				#{templateName},
			</if>
			<if test="templateDes != null and templateDes != ''">
				#{templateDes},
			</if>
			<if test="templateTitle != null and templateTitle != ''">
				#{templateTitle},
			</if>
		</trim>

	</insert>
	
	<update id="updateTemplate" parameterType="com.art1001.supply.entity.template.Template">

		update template
		<set>
			<if test="templateId != null and templateId != ''">
				template_id = #{templateId},
			</if>
			<if test="templateCover != null and templateCover != ''">
				template_cover = #{templateCover},
			</if>
			<if test="templateName != null and templateName != ''">
				template_name = #{templateName},
			</if>
			<if test="templateDes != null and templateDes != ''">
				template_des = #{templateDes},
			</if>
			<if test="templateTitle != null and templateTitle != ''">
				template_title = #{templateTitle},
			</if>
		</set>

		WHERE template_id = #{templateId}

	</update>
	
</mapper>