			<if test="id != null and id != ''">
			id,
			</if>
			<if test="publicId != null and publicId != ''">
			public_id,
			</if>
			<if test="bindId != null and bindId != ''">
			bind_id,
			</if>
			<if test="publicType != null and publicType != ''">
			public_type,
			</if>
			<if test="createTime != null ">
			create_time,
			</if>
			<if test="updateTime != null ">
			update_time,
			</if>
			<if test="projectId != null ">
				project_id,
			</if>
			<if test="groupId != null ">
				group_id,
			</if>
			<if test="menuId != null ">
				menu_id,
			</if>
			<if test="image != null ">
