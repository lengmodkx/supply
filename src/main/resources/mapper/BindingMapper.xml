	<update id="updateBinding" parameterType="com.art1001.supply.entity.binding.Binding">

		update prm_binding
		<set>
			<if test="publicId != null and publicId != ''">
				public_id = #{publicId},
			</if>
			<if test="bindId != null and bindId != ''">
				bind_id = #{bindId},
			</if>
			<if test="publicType != null and publicType != ''">
				public_type = #{publicType},
			</if>
			<if test="createTime != null ">
				create_time = #{createTime},
			</if>
			<if test="updateTime != null ">
				update_time = #{updateTime},
			</if>
			<if test="image != null ">
				iamge = #{image},
			</if>
			<if test="projectId != null ">
				project_id = #{projectId},
			</if>
			<if test="groupId != null ">
				group_id = #{groupId},
			</if>
			<if test="menuId != null ">
				menu_id = #{menuId},
			</if>
			<if test="shareLink != null ">
				share_link = #{shareLink},
			</if>
		</set>
		WHERE id = #{id}
	</update>


	<select id="findBindingList" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		from prm_binding
        where public_id = #{publicId} and public_type = #{publicType}
	</select>

