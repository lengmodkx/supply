		<result column="menu_name" property="menuName" jdbcType="VARCHAR" />
		<result column="task_status" property="taskStatus" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
				id,
				public_id,
				bind_id,
				bind_name,
				public_type,
				create_time,
				update_time,
				image,
			    public_id,
				group_id,
				menu_id,
				share_link
	</sql>

	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="condition !=null">
			</if>
		</where>
	</sql>
	
	<select id="findBindingPagerList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.base.Pager">
		
		select * from prm_binding
		<include refid="whereStatement" />
		
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
		
	</select>
	
	<select id="findBindingAllList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.binding.Binding">
		SELECT
		<include refid="Base_Column_List" />
		from prm_binding
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
	</select>
	
	<select id="findBindingById" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from prm_binding c where id = #{id}

	</select>
	
	<delete id="deleteBindingById" parameterType="java.lang.String">
		delete from
		prm_binding where id = #{id}
	</delete>
	
