	<select id="listBindingInfoByPublicId" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"></include>
		from prm_binding where public_id = #{publicId}
	</select>

	<!-- 查询出此条关联在库中的记录数 -->
	<select id="getBindingRecord" resultType="java.lang.String">
		select bind_id from prm_binding where public_id = #{publicId} and bind_id in
		<foreach collection="bindId" item="id" close=")" open="(" separator="," >
			#{id}
		</foreach>
	</select>

	<!-- 根据publicId 查询出该信息关联的所有信息 -->
	<select id="findBindingInfoByPublic" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" />
		from prm_binding where public_id = #{publicId}
	</select>

	<!-- 保存多条关联信息 -->
	<insert id="saveMany" parameterType="java.util.ArrayList">
		insert into prm_binding(id,public_id,bind_id,public_type)
		values
		<foreach collection="list" item="b" separator=",">
			(
			#{b.id},#{b.publicId},#{b.bindId},#{b.publicType}
			)
		</foreach>
	</insert>

	<!-- 批量插入信息 -->
	<insert id="insertBatch">
		insert into prm_binding
		(
			public_id,
			bind_id,
			public_type
		)
		VALUES
		<foreach collection="bindList" separator="," item="bind">
			(
			  	#{publicId},#{bind},#{publicType}
			)
		</foreach>
	</insert>

	<!-- 通过pubilcid 删除多条关联信息 -->
	<delete id="deleteManyByPublicId">
		delete from prm_binding where public_id in
		(
			<foreach collection="list" separator="," item="publicId">
				#{publicId}
			</foreach>
		)  or bind_id in
		(
			<foreach collection="list" separator="," item="publicId">
				#{publicId}
			</foreach>
		)
	</delete>
	<delete id="deleteBindingById">
		delete from prm_binding where public_id = #{id} and bind_id = #{bindingId}
	</delete>

	<!-- 删除绑定信息批处理 -->
	<delete id="deleteBatch" parameterType="map">
		delete from prm_binding where public_id = #{publicId} and bind_id
		in(
		<foreach collection="binds" item="id" separator=",">
			#{id}
		</foreach>
		)
	</delete>

	<!-- 删除关联信息 -->
    <delete id="deleteByPublicId">
		delete from prm_binding where public_id = #{publicId} or bind_id = #{publicId}
	</delete>

</mapper>