<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.binding.BindingMapper">
	
	<resultMap id="BaseResultMap" type="com.art1001.supply.entity.binding.Binding">
		<result column="id" property="id" jdbcType="VARCHAR" />
		<result column="public_id" property="publicId" jdbcType="VARCHAR" />
		<result column="bind_id" property="bindId" jdbcType="VARCHAR" />
		<result column="public_type" property="publicType" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
				id,
				public_id,
				bind_id,
				public_type
	</sql>

	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="condition !=null">
			</if>
		</where>
	</sql>
	
	<select id="findBindingPagerList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.base.Pager">
		
		select * from prm_binding
		<include refid="whereStatement" />
		
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
		
	</select>
	
	<select id="findBindingAllList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.binding.Binding">
		SELECT
		<include refid="Base_Column_List" />
		from prm_binding
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
	</select>
	
	<select id="findBindingById" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from prm_binding c where id = #{id}

	</select>

	<insert id="saveBinding" parameterType="com.art1001.supply.entity.binding.Binding">

		insert into prm_binding
		<trim prefix="(" suffix=")" suffixOverrides=",">

			<if test="id != null and id != ''">
			id,
			</if>
			<if test="publicId != null and publicId != ''">
			public_id,
			</if>
			<if test="bindId != null and bindId != ''">
			bind_id,
			</if>
			<if test="publicType != null and publicType != ''">
			public_type,
			</if>
			<if test="createTime != null ">
			create_time,
			</if>
			<if test="updateTime != null ">
			update_time,
			</if>
			<if test="projectId != null ">
				project_id,
			</if>
			<if test="groupId != null ">
				group_id,
			</if>
			<if test="menuId != null ">
				menu_id,
			</if>
			<if test="image != null ">
				image,
			</if>
			<if test="shareLink != null ">
				share_link,
			</if>

		</trim>

		<trim prefix="values (" suffix=")" suffixOverrides=",">

			<if test="id != null and id != ''">
				#{id},
			</if>
			<if test="publicId != null and publicId != ''">
				#{publicId},
			</if>
			<if test="bindId != null and bindId != ''">
				#{bindId},
			</if>
			<if test="publicType != null and publicType != ''">
				#{publicType},
			</if>
			<if test="createTime != null ">
				#{createTime},
			</if>
			<if test="updateTime != null ">
				#{updateTime},
			</if>
			<if test="image != null ">
				#{image},
			</if>
			<if test="projectId != null ">
				#{projectId},
			</if>
			<if test="groupId != null ">
				#{groupId},
			</if>
			<if test="menuId != null ">
				#{menuId},
			</if>
			<if test="shareLink != null ">
				#{shareLink},
			</if>
		</trim>

	</insert>
	
	<update id="updateBinding" parameterType="com.art1001.supply.entity.binding.Binding">

		update prm_binding
		<set>
			<if test="publicId != null and publicId != ''">
				public_id = #{publicId},
			</if>
			<if test="bindId != null and bindId != ''">
				bind_id = #{bindId},
			</if>
			<if test="publicType != null and publicType != ''">
				public_type = #{publicType},
			</if>
			<if test="createTime != null ">
				create_time = #{createTime},
			</if>
			<if test="updateTime != null ">
				update_time = #{updateTime},
			</if>
			<if test="image != null ">
				iamge = #{image},
			</if>
			<if test="projectId != null ">
				project_id = #{projectId},
			</if>
			<if test="groupId != null ">
				group_id = #{groupId},
			</if>
			<if test="menuId != null ">
				menu_id = #{menuId},
			</if>
			<if test="shareLink != null ">
				share_link = #{shareLink},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<!-- 更新json数据 -->
	<update id="updateJson">
		update prm_binding SET bind_content =json_set(
		bind_content,
		<trim suffixOverrides=",">
			<if test="type == '任务'">

				<if test="obj.userImage != null and obj.userImage != ''">
					'$.userImage',#{obj.userImage},
				</if>

				<if test="obj.remarks != null and obj.remarks != ''">
					'$.remarks',#{obj.remarks},
				</if>

				<if test="obj.taskName != null and obj.taskName != ''">
					'$.taskName',#{obj.taskName},
				</if>

				<if test="obj.menuName != null and obj.menuName != ''">
					'$.menuName',#{obj.menuName},
				</if>

				<if test="obj.groupName != null and obj.groupName != ''">
					'$.groupName',#{obj.groupName},
				</if>

				<if test="obj.projectName != null and obj.projectName != ''">
					'$.projectName',#{obj.projectName},
				</if>

			</if>
			<if test="type == '文件'">
				<if test="obj.fileName != null and obj.fileName != ''">
					'$.fileName',#{obj.fileName},
				</if>
				<if test="obj.projectName != null and obj.projectName != ''">
					'$.projectName',#{obj.projectName},
				</if>
			</if>
			<if test="type == '日程'">
				<if test="obj.scheduleName != null and obj.scheduleName != ''">
					'$.scheduleName',#{obj.scheduleName},
				</if>
				<if test="obj.projectName != null and obj.projectName != ''">
					'$.projectName',#{obj.projectName},
				</if>
			</if>
			<if test="type == '分享'">
				<if test="obj.shareName != null and obj.shareName != ''">
					'$.shareName',#{obj.shareName},
				</if>
				<if test="obj.projectName != null and obj.projectName != ''">
					'$.projectName',#{obj.projectName},
				</if>
			</if>
		</trim>
		  ) WHERE bind_id = #{id};
	</update>


	<select id="findBindingList" resultMap="BaseResultMap" parameterType="java.lang.String">
		SELECT
		<include refid="Base_Column_List" />
		from prm_binding
        where public_id = #{publicId}
	</select>

