<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.task.TaskMemberMapper">
	
	<resultMap id="BaseResultMap" type="com.art1001.supply.entity.task.TaskMember">
		<result column="id" property="id" jdbcType="VARCHAR" />
		<result column="member_id" property="memberId" jdbcType="VARCHAR" />
		<result column="public_id" property="publicId" jdbcType="VARCHAR" />
		<result column="public_type" property="publicType" jdbcType="VARCHAR" />
		<result column="member_name" property="memberName" jdbcType="VARCHAR" />
		<result column="member_img" property="memberImg" jdbcType="VARCHAR" />
		<result column="type" property="type" jdbcType="VARCHAR" />
		<result column="current_task_id" property="currentTaskId" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="BIGINT" />
		<result column="update_time" property="updateTime" jdbcType="BIGINT" />
	</resultMap>
    
	<sql id="Base_Column_List">
						id,
				member_id,
				public_id,
				public_type,
				member_name,
				member_img,
				`type`,
				create_time,
				update_time
	</sql>

	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="condition !=null">
			</if>
		</where>
	</sql>
	
	<select id="findTaskMemberPagerList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.base.Pager">
		
		select * from prm_task_member
		<include refid="whereStatement" />
		
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
		
	</select>
	
	<select id="findTaskMemberAllList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.task.TaskMember">
		SELECT
		<include refid="Base_Column_List" />
		from prm_task_member
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
	</select>
	
	<select id="findTaskMemberById" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from prm_task_member c where id = #{id}

	</select>
	
	<delete id="deleteTaskMemberById" parameterType="java.lang.String">
		delete from
		prm_task_member where id = #{id}
	</delete>
	
	<insert id="saveTaskMember" parameterType="com.art1001.supply.entity.task.TaskMember">

		insert into prm_task_member
		<trim prefix="(" suffix=")" suffixOverrides=",">

			<if test="id != null and id != ''">
			id,
			</if>
			<if test="memberId != null and memberId != ''">
			member_id,
			</if>
			<if test="publicId != null and publicId != ''">
			public_id,
			</if>
			<if test="publicType != null and publicType != ''">
			public_type,
			</if>
			<if test="memberName != null and memberName != ''">
			member_name,
			</if>
			<if test="memberImg != null and memberImg != ''">
			member_img,
			</if>
			<if test="type != null and type != ''">
			`type`,
			</if>
			<if test="createTime != null ">
			create_time,
			</if>
			<if test="updateTime != null ">
			update_time,
			</if>
		</trim>

		<trim prefix="values (" suffix=")" suffixOverrides=",">

			<if test="id != null and id != ''">
				#{id},
			</if>
			<if test="memberId != null and memberId != ''">
				#{memberId},
			</if>
			<if test="publicId != null and publicId != ''">
				#{publicId},
			</if>
			<if test="publicType != null and publicType != ''">
				#{publicType},
			</if>
			<if test="memberName != null and memberName != ''">
				#{memberName},
			</if>
			<if test="memberImg != null and memberImg != ''">
				#{memberImg},
			</if>
			<if test="type != null and type != ''">
				#{type},
			</if>
			<if test="createTime != null ">
				#{createTime},
			</if>
			<if test="updateTime != null ">
				#{updateTime},
			</if>
		</trim>

	</insert>
	
	<update id="updateTaskMember" parameterType="com.art1001.supply.entity.task.TaskMember">

		update prm_task_member
		<set>
			<if test="memberId != null and memberId != ''">
				member_id = #{memberId},
			</if>
			<if test="publicId != null and publicId != ''">
				public_id = #{publicId},
			</if>
			<if test="publicType != null and publicType != ''">
				public_type = #{publicType},
			</if>
			<if test="memberName != null and memberName != ''">
				member_name = #{memberName},
			</if>
			<if test="memberImg != null and memberImg != ''">
				member_img = #{memberImg},
			</if>
			<if test="type != null and type != ''">
				type = #{type},
			</if>
			<if test="createTime != null ">
				create_time = #{createTime},
			</if>
			<if test="updateTime != null ">
				update_time = #{updateTime},
			</if>
		</set>

		WHERE id = #{id}

	</update>

	<select id="findTaskExecutor" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"></include>
		from prm_task_member where public_id = #{taskId} and type = '执行者'
	</select>

	<!-- 查询该成员在此任务中有没有以参与者的形式存在 -->
	<select id="findTaskMemberExecutorIsMember" resultType="java.lang.Integer">
		select count(0) from prm_task_member where public_id = #{taskId} and member_id = #{memberId} and type = '参与者'
	</select>

	<!-- 查询出当前任务的所有参与者的关联信息 -->
	<select id="findTaskMemberByTaskId" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"></include>
		from prm_task_member where public_id = #{taskId}
	</select>

	<!-- 查询出当前任务的关联的为任务的信息 -->
	<select id="findTaskRelationTask" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"></include>
		from prm_task_member where public_id = #{taskId} and public_type = '任务'
	</select>

	<!-- 删除一个任务下的执行者信息 -->
	<delete id="delTaskMemberExecutor">
		delete from prm_task_member where public_id = #{taskId} and type = '执行者'
	</delete>
</mapper>