<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.statistics.StatisticsMapper">




    <select id="getCountTask" parameterType="java.lang.String" resultType="java.lang.Integer">
         SELECT COUNT(1) FROM prm_task  WHERE  pt.project_id=#{projectId}
    </select>


    <select id="getPieDate" parameterType="java.lang.String"  resultType="com.art1001.supply.entity.statistics.StatisticsPie" >
         SELECT tu.user_name name ,COUNT(1) y FROM prm_task pt LEFT JOIN tb_user tu ON tu.user_id=pt.task_uids   WHERE  pt.project_id=#{projectId} GROUP BY pt.task_uids
    </select>

</mapper>