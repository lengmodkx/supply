<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.task.TaskLogMapper">
	
	<resultMap id="BaseResultMap" type="com.art1001.supply.entity.task.TaskLog">
		<result column="id" property="id" jdbcType="VARCHAR" />
		<result column="task_id" property="taskId" jdbcType="VARCHAR" />
		<result column="member_id" property="memberId" jdbcType="VARCHAR" />
		<result column="member_name" property="memberName" jdbcType="VARCHAR" />
		<result column="member_img" property="memberImg" jdbcType="VARCHAR" />
		<result column="content" property="content" jdbcType="VARCHAR" />
		<result column="log_type" property="logType" jdbcType="INTEGER" />
		<result column="create_time" property="createTime" jdbcType="BIGINT" />
	</resultMap>
    
	<sql id="Base_Column_List">
				id,
				task_id,
				member_id,
				member_name,
				member_img,
				content,
				log_type,
				create_time
	</sql>

	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="condition !=null">
			</if>
		</where>
	</sql>
	
	<select id="findTaskLogPagerList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.base.Pager">
		
		select * from prm_task_log
		<include refid="whereStatement" />
		
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
		
	</select>
	
	<select id="findTaskLogAllList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.task.TaskLog">
		SELECT
		<include refid="Base_Column_List" />
		from prm_task_log
		<if test="orderBy == 0">
			order by id desc
		</if>
		<if test="orderBy == 1">
			order by id asc
		</if>
	</select>
	
	<select id="findTaskLogById" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from prm_task_log c where id = #{id}

	</select>
	
	<delete id="deleteTaskLogById" parameterType="java.lang.String">
		delete from
		prm_task_log where id = #{id}
	</delete>
	
	<insert id="saveTaskLog" parameterType="com.art1001.supply.entity.task.TaskLog">

		insert into prm_task_log
		<trim prefix="(" suffix=")" suffixOverrides=",">

			<if test="id != null and id != ''">
			id,
			</if>
			<if test="taskId != null and taskId != ''">
			task_id,
			</if>
			<if test="memberId != null and memberId != ''">
			member_id,
			</if>
			<if test="memberName != null and memberName != ''">
			member_name,
			</if>
			<if test="memberImg != null and memberImg != ''">
			member_img,
			</if>
			<if test="content != null and content != ''">
			content,
			</if>
			<if test="logType != null">
			log_type,
			</if>
			<if test="createTime != null ">
			create_time,
			</if>
		</trim>

		<trim prefix="values (" suffix=")" suffixOverrides=",">

			<if test="id != null and id != ''">
				#{id},
			</if>
			<if test="taskId != null and taskId != ''">
				#{taskId},
			</if>
			<if test="memberId != null and memberId != ''">
				#{memberId},
			</if>
			<if test="memberName != null and memberName != ''">
				#{memberName},
			</if>
			<if test="memberImg != null and memberImg != ''">
				#{memberImg},
			</if>
			<if test="content != null and content != ''">
				#{content},
			</if>
			<if test="logType != null ">
				#{logType},
			</if>
			<if test="createTime != null ">
				#{createTime},
			</if>
		</trim>

	</insert>
	
	<update id="updateTaskLog" parameterType="com.art1001.supply.entity.task.TaskLog">

		update prm_task_log
		<set>
			<if test="taskId != null and taskId != ''">
				task_id = #{taskId},
			</if>
			<if test="memberId != null and memberId != ''">
				member_id = #{memberId},
			</if>
			<if test="memberName != null and memberName != ''">
				member_name = #{memberName},
			</if>
			<if test="memberImg != null and memberImg != ''">
				member_img = #{memberImg},
			</if>
			<if test="content != null and content != ''">
				content = #{content},
			</if>
			<if test="createTime != null ">
				create_time = #{createTime},
			</if>
			<if test="logType != null">
				logType = #{logType},
			</if>
		</set>

		WHERE id = #{id}

	</update>
	<!-- 查询该日志的content -->
	<select id="findTaskLogContentById" resultType="com.art1001.supply.entity.task.TaskLogVO" parameterType="java.lang.String">

		select content,create_time createTime,member_img memberImg from prm_task_log where id = #{id}

	</select>

	<!-- 初始化5条 任务的操作日志 -->
	<select id="initTaskLog" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"></include>
		from prm_task_log where task_id = #{taskId} order by create_time desc limit 0,5
	</select>
	
</mapper>