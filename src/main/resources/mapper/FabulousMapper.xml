<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.fabulous.FabulousMapper">
	
	<resultMap id="BaseResultMap" type="com.art1001.supply.entity.fabulous.Fabulous">
		<result column="fabulous_id" property="fabulousId" jdbcType="BIGINT" />
		<result column="member_id" property="memberId" jdbcType="VARCHAR" />
		<result column="task_id" property="taskId" jdbcType="VARCHAR" />
	</resultMap>
    
	<sql id="Base_Column_List">
						fabulous_id,
				member_id,
				public_id
	</sql>

	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="condition !=null">
			</if>
		</where>
	</sql>
	
	<select id="findFabulousPagerList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.base.Pager">
		
		select * from prm_fabulous
		<include refid="whereStatement" />
		
		<if test="orderBy == 0">
			order by fabulous_id desc
		</if>
		<if test="orderBy == 1">
			order by fabulous_id asc
		</if>
		
	</select>
	
	<select id="findFabulousAllList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.fabulous.Fabulous">
		SELECT
		<include refid="Base_Column_List" />
		from prm_fabulous
		<if test="orderBy == 0">
			order by fabulous_id desc
		</if>
		<if test="orderBy == 1">
			order by fabulous_id asc
		</if>
	</select>
	
	<select id="findFabulousByFabulousId" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from prm_fabulous c where fabulous_id = #{fabulousId}

	</select>
	
	<delete id="deleteFabulousByFabulousId" parameterType="java.lang.String">
		delete from
		prm_fabulous where fabulous_id = #{fabulousId}
	</delete>
	
	<insert id="addFabulous" parameterType="com.art1001.supply.entity.fabulous.Fabulous">

		insert into prm_fabulous
		<trim prefix="(" suffix=")" suffixOverrides=",">

			<if test="fabulousId != null ">
			fabulous_id,
			</if>
			<if test="memberId != null and memberId != ''">
			member_id,
			</if>
			<if test="publicId != null and publicId != ''">
			public_id,
			</if>
		</trim>

		<trim prefix="values (" suffix=")" suffixOverrides=",">

			<if test="fabulousId != null ">
				#{fabulousId},
			</if>
			<if test="memberId != null and memberId != ''">
				#{memberId},
			</if>
			<if test="publicId != null and publicId != ''">
				#{publicId},
			</if>
		</trim>

	</insert>
	
	<update id="updateFabulous" parameterType="com.art1001.supply.entity.fabulous.Fabulous">

		update prm_fabulous
		<set>
			<if test="fabulousId != null ">
				fabulous_id = #{fabulousId},
			</if>
			<if test="memberId != null and memberId != ''">
				member_id = #{memberId},
			</if>
			<if test="publicId != null and publicId != ''">
				public_id = #{publicId},
			</if>
		</set>

		WHERE fabulous_id = #{fabulousId}

	</update>

	<!-- 判断当前用户有没有给当前任务点赞 -->
	<select id="judgeFabulous" resultType="java.lang.Integer">
		select count(0) from prm_fabulous where public_id = #{publicId} and member_id = #{memberId}
	</select>

	
</mapper>