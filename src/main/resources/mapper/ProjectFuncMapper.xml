<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.project.ProjectFuncMapper">
	
	<resultMap id="BaseResultMap" type="com.art1001.supply.entity.project.ProjectFunc">
		<result column="func_id" property="funcId" jdbcType="INTEGER" />
		<result column="func_name" property="funcName" jdbcType="VARCHAR" />
		<result column="func_order" property="funcOrder" jdbcType="INTEGER" />
		<result column="project_id" property="projectId" jdbcType="VARCHAR" />
		<result column="is_open" property="isOpen" jdbcType="INTEGER" />
	</resultMap>
    
	<sql id="Base_Column_List">
				func_id,
				func_name,
				func_order,
				project_id,
				is_open
	</sql>

	<sql id="whereStatement">
		<where>
			1 = 1
			<if test="condition !=null">
			</if>
		</where>
	</sql>
	
	<select id="findProjectFuncPagerList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.base.Pager">
		
		select * from prm_project_func
		<include refid="whereStatement" />
		
		<if test="orderBy == 0">
			order by func_id desc
		</if>
		<if test="orderBy == 1">
			order by func_id asc
		</if>
		
	</select>
	
	<select id="findProjectFuncAllList" resultMap="BaseResultMap"
		parameterType="com.art1001.supply.entity.project.ProjectFunc">
		SELECT
		<include refid="Base_Column_List" />
		from prm_project_func
		<if test="orderBy == 0">
			order by func_id desc
		</if>
		<if test="orderBy == 1">
			order by func_id asc
		</if>
	</select>
	
	<select id="findProjectFuncByPId" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from prm_project_func c where func_id = #{funcId}

	</select>
	
	<delete id="deleteProjectFuncByPId" parameterType="java.lang.String">
		delete from
		prm_project_func where func_id = #{funcId}
	</delete>
	
	<insert id="saveProjectFunc">
		insert into prm_project_func(func_name, func_order, project_id, is_open) values
		<foreach collection="appName" item="name" index="index" separator=",">
			(#{name}, #{index},#{projectId},1)
		</foreach>
	</insert>
	
	<update id="updateProjectFunc" parameterType="com.art1001.supply.entity.project.ProjectFunc">

		update prm_project_func
		<set>
			<if test="funcId != null ">
				func_id = #{funcId},
			</if>
			<if test="funcName != null and funcName != ''">
				func_name = #{funcName},
			</if>
			<if test="funcOrder != null ">
				func_order = #{funcOrder},
			</if>
			<if test="projectId != null and projectId != ''">
				project_id = #{projectId},
			</if>
			<if test="isOpen != null ">
				is_open = #{isOpen},
			</if>
		</set>

		WHERE func_id = #{funcId}

	</update>

	<select id="findProjectFuncList" resultMap="BaseResultMap" parameterType="java.lang.String">
		SELECT
		<include refid="Base_Column_List" />
		from prm_project_func
		where project_id = #{projectId}
		order by func_order asc
	</select>


</mapper>