<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.art1001.supply.mapper.tagrelation.TagRelationMapper">
	
	<resultMap id="BaseResultMap" type="com.art1001.supply.entity.tag.TagRelation">
		<result column="id" property="id" jdbcType="VARCHAR" />
		<result column="tag_id" property="tagId" jdbcType="BIGINT" />
		<result column="task_id" property="taskId" jdbcType="VARCHAR" />
		<result column="file_id" property="fileId" jdbcType="VARCHAR" />
		<result column="schedule_id" property="scheduleId" jdbcType="VARCHAR" />
		<result column="share_id" property="shareId" jdbcType="VARCHAR" />
	</resultMap>
    
	<sql id="Base_Column_List">
						id,
				tag_id,
				task_id,
				file_id,
				schedule_id,
				share_id
	</sql>
	
	<select id="findTagRelationById" resultMap="BaseResultMap" parameterType="java.lang.String">

		select
		<include refid="Base_Column_List" />
		from prm_tag_relation where id = #{id}

	</select>

	<select id="findTagRelationByTagId" resultMap="BaseResultMap" parameterType="java.lang.Long">

		select
		<include refid="Base_Column_List" />
		from prm_tag_relation where tag_id = #{tagId}

	</select>

	<delete id="deleteTagRelationById" parameterType="java.lang.String">
		delete from
		prm_tag_relation where id = #{id}
	</delete>


	<delete id="deleteByPublicId" parameterType="com.art1001.supply.entity.tag.TagRelation">
		delete from
			prm_tag_relation where tag_id = #{tagId}
			<if test="taskId != null and taskId != ''">
				and task_id = #{taskId}
			</if>
			<if test="fileId != null and fileId != ''">
				and file_id = #{fileId}
			</if>
			<if test="scheduleId != null and scheduleId != ''">
				and schedule_id = #{scheduleId}
			</if>
			<if test="shareId != null and shareId != ''">
				and share_id = #{shareId}
			</if>

	</delete>


	<insert id="saveTagRelation" parameterType="com.art1001.supply.entity.tag.TagRelation">

		insert into prm_tag_relation
		<trim prefix="(" suffix=")" suffixOverrides=",">

			<if test="id != null and id != ''">
			id,
			</if>
			<if test="tagId != null and tagId != ''">
			tag_id,
			</if>
			<if test="taskId != null and taskId != ''">
			task_id,
			</if>
			<if test="fileId != null and fileId != ''">
			file_id,
			</if>
			<if test="scheduleId != null and scheduleId != ''">
			schedule_id,
			</if>
			<if test="shareId != null and shareId != ''">
			share_id,
			</if>
		</trim>

		<trim prefix="values (" suffix=")" suffixOverrides=",">

			<if test="id != null and id != ''">
				#{id},
			</if>
			<if test="tagId != null and tagId != ''">
				#{tagId},
			</if>
			<if test="taskId != null and taskId != ''">
				#{taskId},
			</if>
			<if test="fileId != null and fileId != ''">
				#{fileId},
			</if>
			<if test="scheduleId != null and scheduleId != ''">
				#{scheduleId},
			</if>
			<if test="shareId != null and shareId != ''">
				#{shareId},
			</if>
		</trim>

	</insert>
	
	<update id="updateTagRelation" parameterType="com.art1001.supply.entity.tag.TagRelation">

		update prm_tag_relation
		<set>
			<if test="tagId != null and tagId != ''">
				tag_id = #{tagId},
			</if>
			<if test="taskId != null and taskId != ''">
				task_id = #{taskId},
			</if>
			<if test="fileId != null and fileId != ''">
				file_id = #{fileId},
			</if>
			<if test="scheduleId != null and scheduleId != ''">
				schedule_id = #{scheduleId},
			</if>
			<if test="shareId != null and shareId != ''">
				share_id = #{shareId},
			</if>
		</set>

		WHERE id = #{id}

	</update>



	<!-- 插入多条标签关系 -->
	<insert id="saveManyTagRelation">
		insert into prm_tag_relation
		(id,
		tag_id,
		task_id)
		values
		<foreach collection="list" separator="," item="relation">
			(
			#{relation.id},#{relation.tagId},#{relation.taskId}
			)
		</foreach>
	</insert>

	<!-- 删除某个项的所有标签关联信息 -->
	<delete id="deleteItemTagRelation">
		delete from prm_tag_relation where
		<if test="publicType == '任务'">
			task_id = #{publicId}
		</if>
		<if test="publicType == '文件'">
			file_id = #{publicId}
		</if>
		<if test="publicType == '日程'">
			schedule_id = #{publicId}
		</if>
		<if test="publicType == '分享'">
			share_id = #{publicId}
		</if>
	</delete>

	<!-- 删除多个项的标签关联信息 -->
	<delete id="deleteManyItemTagRelation">
		delete from prm_tag_relation where task_id in
		(
			<foreach collection="list" separator="," item="taskId">
				#{taskId}
			</foreach>
		)
	</delete>


	<select id="findCountById"  resultType="int">
		select count(0) from prm_tag_relation
		<where>
				tag_id = #{tagId} and
			<if test="taskId != null and taskId != ''">
				task_id = #{taskId}
			</if>
			<if test="fileId != null and fileId != ''">
				file_id = #{fileId}
			</if>
			<if test="scheduleId != null and scheduleId != ''">
				schedule_id = #{scheduleId}
			</if>
			<if test="shareId != null and shareId != ''">
				share_id = #{shareId}
			</if>
		</where>
	</select>
	
</mapper>